<%= form_for @page do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :details %><br />
    <%= f.text_area :details %>
  </p>
  <p>
    <%= f.label :layout %><br />
    <%= f.text_field :layout %>
  </p>
  <p>
    <%= f.label :ordering %><br />
    <%= f.text_field :ordering %>
  </p>
  <p><%= f.submit %></p>
<% end %>
