<%= form_for @detail do |f| %>
  <%= f.hidden_field :formtype, :value => 'Registration' %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :query %><br />
    <%= f.text_area :query %>
  </p>
  <p><%= f.submit "Register" %></p>
<% end %>
